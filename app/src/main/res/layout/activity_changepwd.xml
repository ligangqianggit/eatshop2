<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beijing">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="10dp"
            android:text="修改密码"
            android:textColor="#fff"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_changepwd_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back_white" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_opin"
            android:text="旧密码"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/ed_changge_oldpwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/size_18"
            android:textColor="@color/black"
            android:hint="请输入旧密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_opin"
            android:text="新密码"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/ed_changge_newpwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/size_18"
            android:textColor="@color/black"
            android:hint="请输入新密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_preson_fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_opin"
            android:text="确认密码"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <EditText
            android:id="@+id/ed_changge_newpwd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/size_18"
            android:textColor="@color/black"
            android:hint="请确认新密码"
            android:textColorHint="@color/gray"
            android:inputType="textPassword"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认修改"
        android:textSize="@dimen/size_18"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="@drawable/login_bt"
        android:id="@+id/bt_change"
        />
</LinearLayout>