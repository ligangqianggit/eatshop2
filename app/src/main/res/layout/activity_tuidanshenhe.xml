<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yemain_beijing"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/beijing"
        >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="退单审核" />

        <ImageView
            android:id="@+id/iv_tuidan_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_back_white" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_tuidan_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户：XX"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态：未领取"
            android:textSize="@dimen/text_size_18"
            android:layout_toRightOf="@+id/tv_tuidan_user"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/tv_tuidan_user"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/tv_tuidan_xian1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yemain_beijing"
            android:layout_below="@+id/tv_tuidan_zhuangtai"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_tuidan_xiadantime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_tuidan_canpin1"
            android:layout_alignStart="@+id/tv_tuidan_canpin1"
            android:layout_below="@+id/tv_tuidan_xian1"
            android:text="下单时间:12-07 18:00"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_14" />

        <TextView
            android:id="@+id/tv_tuidan_qucantime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取餐时间:12-08 8:00"
            android:textSize="@dimen/size_14"
            android:layout_toRightOf="@+id/tv_tuidan_xiadantime"
            android:layout_alignBaseline="@+id/tv_tuidan_xiadantime"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_canpin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="油条2根"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_qucantime"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_canpin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="豆浆1碗"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_canpin1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_xian2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yemain_beijing"
            android:layout_below="@+id/tv_tuidan_canpin2"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_tuidan_yuanyin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原因:有事外出了"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_xian2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额:5元"
            android:textSize="@dimen/text_size_18"
            android:layout_below="@+id/tv_tuidan_yuanyin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            />



        <Button
            android:id="@+id/bt_tuidan_jvjue"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="拒绝"
            android:textSize="@dimen/size_14"
            android:textColor="@color/beijing"
            android:padding="5dp"
            android:background="@drawable/ic_kuang"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_tuidan_money"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="同意"
            android:textSize="@dimen/size_14"
            android:padding="5dp"
            android:background="@color/beijing"
            android:layout_toLeftOf="@+id/bt_tuidan_jvjue"
            android:layout_alignBottom="@+id/bt_tuidan_jvjue"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_tuidan_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户：XXX"
            android:textSize="@dimen/text_size_18"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_zhuangtai1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单状态：未领取"
            android:textSize="@dimen/text_size_18"
            android:layout_toRightOf="@+id/tv_tuidan_user1"
            android:layout_marginLeft="10dp"
            android:layout_alignBaseline="@+id/tv_tuidan_user1"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/tv_tuidan_xian11"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yemain_beijing"
            android:layout_below="@+id/tv_tuidan_zhuangtai1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_tuidan_xiadantime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下单时间:12-07 18:00"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_xian11"
            android:layout_alignLeft="@+id/tv_tuidan_xian11"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_qucantime1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取餐时间:12-08 12:00"
            android:textSize="@dimen/size_14"
            android:layout_toRightOf="@+id/tv_tuidan_xiadantime1"
            android:layout_alignBaseline="@+id/tv_tuidan_xiadantime1"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_canpin11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="米饭1碗"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_qucantime1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_canpin21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西红柿炒鸡蛋1份"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_canpin11"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_xian21"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yemain_beijing"
            android:layout_below="@+id/tv_tuidan_canpin21"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/tv_tuidan_yuanyin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原因:有事外出了"
            android:textSize="@dimen/size_14"
            android:layout_below="@+id/tv_tuidan_xian21"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/gray"
            />

        <TextView
            android:id="@+id/tv_tuidan_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额:10元"
            android:textSize="@dimen/text_size_18"
            android:layout_below="@+id/tv_tuidan_yuanyin1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/black"
            />



        <Button
            android:id="@+id/bt_tuidan_jvjue1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="拒绝"
            android:textSize="@dimen/size_14"
            android:textColor="@color/beijing"
            android:padding="5dp"
            android:background="@drawable/ic_kuang"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_tuidan_money1"
            android:layout_marginRight="5dp"
            />
        <Button
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="同意"
            android:textSize="@dimen/size_14"
            android:padding="5dp"
            android:background="@color/beijing"
            android:layout_toLeftOf="@+id/bt_tuidan_jvjue1"
            android:layout_alignBottom="@+id/bt_tuidan_jvjue1"
            android:layout_marginRight="5dp"
            />
    </RelativeLayout>
</LinearLayout>
