<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/beijing">

            <TextView
                android:id="@+id/tv_preson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/main_radio_per"
                android:textColor="@color/black"
                android:textSize="@dimen/size_22" />

            <ImageView
                android:id="@+id/iv_preson_touxiang"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/tv_preson_title"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_preson_touxiang" />

            <TextView
                android:id="@+id/tv_preson_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_preson_touxiang"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="用户名"
                android:textColor="@color/black"
                android:textSize="@dimen/size_22" />

            <TextView
                android:id="@+id/tv_preson_tianchong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_preson_user"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/tv_preson_iccard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_preson_tianchong"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/tv_preson_tianchong"
                android:drawableLeft="@mipmap/ic_preson_cord"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="工号"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15" />

            <TextView
                android:id="@+id/tv_preson_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_preson_tianchong"
                android:layout_below="@+id/tv_preson_iccard"
                android:layout_toRightOf="@+id/tv_preson_tianchong"
                android:drawableLeft="@mipmap/ic_preson_phone"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="188888888888"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_preson_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_preson_tianchong"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:drawableLeft="@mipmap/ic_preson_location"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="青岛亚马逊"
                android:textColor="@color/black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_preson_yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    android:layout_gravity="center"
                    android:text="0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    android:layout_gravity="center"
                    android:text="余额"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_preson_fengexian"
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@color/beijing" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_preson_jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    android:layout_gravity="center"
                    android:text="0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_20"
                    android:layout_gravity="center"
                    android:text="积分"
                    />
            </LinearLayout>
        </LinearLayout>

