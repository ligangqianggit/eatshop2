        <LinearLayout
            android:id="@+id/llyt_preson_zilaio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@mipmap/ic_preson_opin"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="完善资料"
                android:textColor="@color/black"
                android:textSize="@dimen/size_17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_right_hui" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_preson_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@mipmap/ic_preson_history"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="历史订单"
                android:textColor="@color/black"
                android:textSize="@dimen/size_17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_right_hui" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_preson_fankui"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@mipmap/ic_preson_history"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="意见反馈"
                android:textColor="@color/black"
                android:textSize="@dimen/size_17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_right_hui" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_preson_changepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@mipmap/ic_preson_history"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="修改密码"
                android:textColor="@color/black"
                android:textSize="@dimen/size_17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_right_hui" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_preson_tuichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:drawableLeft="@mipmap/ic_preson_history"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="退出登录"
                android:textColor="@color/black"
                android:textSize="@dimen/size_17" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_right_hui" />

        </LinearLayout>
