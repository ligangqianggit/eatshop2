<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yemain_beijing"
    android:orientation="vertical"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/font_orange"
    >
    <TextView
        android:id="@+id/tv_preson_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_radio_per"
        android:textSize="@dimen/size_22"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        />
<ImageView
    android:id="@+id/iv_preson_touxiang"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_below="@+id/tv_preson_title"
    android:src="@mipmap/ic_launcher"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    />
    <TextView
        android:id="@+id/tv_preson_user"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/iv_preson_touxiang"
        android:layout_alignTop="@+id/iv_preson_touxiang"
        android:layout_height="wrap_content"
        android:text="用户名"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/ic_preson_user"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textSize="@dimen/size_15"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_preson_iccard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_preson_user"
        android:layout_alignStart="@+id/tv_preson_user"
        android:layout_below="@+id/tv_preson_user"
        android:layout_marginTop="10dp"
        android:text="工号"
        android:drawableLeft="@mipmap/ic_preson_cord"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:textColor="@color/black"
        android:textSize="@dimen/size_15"
        />

    <TextView
        android:id="@+id/tv_preson_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_preson_iccard"
        android:layout_alignStart="@+id/tv_preson_iccard"
        android:layout_below="@+id/tv_preson_iccard"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_preson_phone"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:text="188888888888"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tv_preson_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_preson_phone"
        android:layout_alignStart="@+id/tv_preson_phone"
        android:layout_below="@+id/tv_preson_phone"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/ic_preson_location"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:text="青岛亚马逊" />

<TextView
    android:id="@+id/tv_preson_xian"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/gray"
    android:layout_below="@+id/tv_preson_location"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    />

    <TextView
        android:id="@+id/tv_preson_fengexian"
        android:layout_width="1dp"
        android:layout_height="18dp"
        android:background="@color/gray"
        android:layout_below="@+id/tv_preson_xian"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/tv_preson_yue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="余额:8888"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:layout_toLeftOf="@+id/tv_preson_fengexian"
        android:layout_alignBaseline="@+id/tv_preson_fengexian"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tv_preson_jifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="积分:8888"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20"
        android:layout_toRightOf="@+id/tv_preson_fengexian"
        android:layout_alignBaseline="@+id/tv_preson_fengexian"
        android:layout_marginLeft="15dp"
        />
</RelativeLayout>
    <LinearLayout
        android:id="@+id/llyt_preson_zilaio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_opin"
            android:text="完善资料"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_right_hui"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_preson_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_history"
            android:text="历史订单"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_right_hui"
            android:layout_weight="1"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_preson_fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_history"
            android:text="意见反馈"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_right_hui"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llyt_preson_changepwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_preson_history"
            android:text="修改密码"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/gray"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_right_hui"
            android:layout_weight="1"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="退出登录"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_20"
        android:background="@color/font_orange"
        android:layout_margin="20dp"
        android:id="@+id/bt_logout"
        />
</LinearLayout>
