<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yemain_beijing"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
 <com.jude.rollviewpager.RollPagerView
     android:id="@+id/roll_yuangong_pager"
     android:layout_width="match_parent"
     android:layout_height="240dp"
     app:rollviewpager_play_delay="3000"/>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
    <ImageView
        android:id="@+id/iv_yuangong_dingcan"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_main_dingcan"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"

        />
    <ImageView
        android:id="@+id/iv_yuangong_qucan"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="3dp"
        android:src="@mipmap/ic_main_qucan"
        />
   </LinearLayout>

  </LinearLayout>


 </ScrollView>

</LinearLayout>
